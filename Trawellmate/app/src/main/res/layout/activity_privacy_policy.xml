<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ContactUsAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grad_theme"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/ID_arw_bck"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="14dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#ffff" />

            <TextView
                android:id="@+id/notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="Privacy Policy"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_large" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">



                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:lineSpacingExtra="6dp"

                    android:text="@string/privacy_policy" />

                <!-- //what info-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/open_san_script"
                    android:text="What personal information we collect from you and how we use it?"
                    android:textColor="#444444"
                    android:textSize="@dimen/text_size_extra_large" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="8dp"

                    android:background="@color/divider_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:lineSpacingExtra="6dp"
                    android:text="When browsing our site, you are not required to provide any personal information unless and until you choose to make a purchase or sign up for one of our e-mail newsletters or other services as described below." />

                <!--            making purchase-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/open_san_script"
                    android:text="Making a Purchase"
                    android:textColor="#444444"

                    android:textSize="@dimen/text_size_extra_large" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="8dp"

                    android:background="@color/divider_color" />

                <TextView
                    android:paddingBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:lineSpacingExtra="6dp"
                    android:text="In order to purchase travel and/or related services through our site, you must provide us with certain personal information such as your name, payment instrument details such as your credit card number and expiration date, credit card billing address, telephone number, e-mail address and the name or names of the person(s) travelling (if not you). We may also ask you for other personal information, such as your frequent flier numbers. We require this information to process, fulfill and confirm your reservations and transactions and keep you informed of each transaction's status. If you are making a reservation for one or more travellers other than yourself, you must confirm and represent that each of these other travellers have agreed, in advance, that you may disclose their personal information to us." />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>