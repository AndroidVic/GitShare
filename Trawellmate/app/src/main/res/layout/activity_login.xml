<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAct">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg" />

    <!--    sign in text-->
    <TextView
        android:id="@+id/Ida_signintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Ida_login_card"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:text="Sign In"
        android:textColor="@color/text_color_white"
        android:textSize="22dp"
        android:visibility="gone" />

    <!--    Login-->
    <androidx.cardview.widget.CardView
        android:id="@+id/Ida_login_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-50dp"
        android:visibility="visible"
        app:cardCornerRadius="50dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/IDa_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_user_icon"
                        android:tint="#ACACAC" />

                    <EditText
                        android:id="@+id/ID_login_username"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Username"
                        android:inputType="textPersonName"
                        android:paddingLeft="50dp"
                        android:text=""
                        android:textSize="@dimen/text_size_medium" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Ida_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_password"
                        android:tint="#ACACAC" />

                    <EditText
                        android:id="@+id/ID_login_password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:paddingLeft="50dp"
                        android:text=""
                        android:textSize="@dimen/text_size_medium" />


                </androidx.cardview.widget.CardView>


                <Button
                    android:id="@+id/ID_login_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    android:background="@drawable/grad_login_bt"
                    android:ems="15"
                    android:text="LOGIN"
                    android:textColor="@color/text_color_white" />

                <net.promasoft.trawellmate.dsgn.CustomTextLink
                    android:id="@+id/ID_login_forget_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:text="Forgot your password?"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_small" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Donâ€™t have an acoount ? " />

                    <net.promasoft.trawellmate.dsgn.CustomTextLink
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Sign Up"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_medium" />

                </LinearLayout>

                <TextView
                    android:id="@+id/Ida_signn_withtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Sign In With" />

                <LinearLayout
                    android:id="@+id/Ida_signn_with"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="0dp"
                        app:cardBackgroundColor="#667EEA"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="1dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_facebook"
                                android:tint="#ffffff" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Facebook"
                                android:textColor="#ffffff" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="0dp"
                        app:cardBackgroundColor="#4BAAFF"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="1dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_google"
                                android:tint="#ffffff" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Google"
                                android:textColor="#ffffff" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <!--    continue-->
    <LinearLayout
        android:id="@+id/Ida_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/Ida_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Plan your travel now"
            android:textColor="@color/text_color_white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Ida_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="Experience the various exciting tour and travel packages, find vacation packages."
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_large" />


        <Button
            android:id="@+id/ID_continue_bt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:background="@drawable/grad_login_bt"
            android:ems="15"
            android:text="CONTINUE"
            android:textColor="@color/text_color_white" />


    </LinearLayout>


</RelativeLayout>