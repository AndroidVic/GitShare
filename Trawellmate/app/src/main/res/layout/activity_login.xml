<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAct">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg" />

    <TextView
        android:textColor="@color/text_color_white"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="220dp"
        android:textSize="@dimen/text_size_extra_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In" />


    <androidx.cardview.widget.CardView
        android:id="@+id/login_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="-50dp"
        app:cardCornerRadius="50dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#a0ffffff"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="1dp">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_user_icon"
                        android:tint="#ACACAC" />

                    <EditText
                        android:id="@+id/ID_login_username"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Username"
                        android:inputType="textPersonName"
                        android:paddingLeft="50dp"
                        android:text=""
                        android:textSize="@dimen/text_size_medium" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="0dp"
                    app:cardBackgroundColor="#a0ffffff"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="1dp">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_user_icon"
                        android:tint="#ACACAC" />

                    <EditText
                        android:id="@+id/ID_login_password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:hint="Password"
                        android:inputType="textPersonName"
                        android:paddingLeft="50dp"
                        android:text=""
                        android:textSize="@dimen/text_size_medium" />


                </androidx.cardview.widget.CardView>


                <Button
                    android:id="@+id/ID_login_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:background="@drawable/grad_login_bt"
                    android:ems="15"
                    android:text="LOGIN"
                    android:textColor="@color/text_color_white" />

                <net.promasoft.trawellmate.dsgn.CustomTextLink
                    android:id="@+id/ID_login_forget_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="Forgot your password?"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_extra_small" />





            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>