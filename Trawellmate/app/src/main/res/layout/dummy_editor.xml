<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E8E8"
    android:orientation="vertical">
    <!--    •⚪•-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/reviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-black"
                            android:gravity="start"
                            android:text="Reviews"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_size_extra_large" />

                        <TextView
                            android:id="@+id/wreviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:gravity="left"
                            android:text="Write a review"
                            android:textColor="#FFAA00"
                            android:textSize="15dp" />

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_weight="0"
                            android:src="@drawable/ic_arrow_right"
                            android:tint="#FFAA00" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/rating_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="4.3"
                                android:textColor="#FFFFAA00"
                                android:textSize="50dp" />

                            <TextView
                                android:id="@+id/rating_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="out of 5"
                                android:textColor="#0C0C0B"
                                android:textSize="@dimen/text_size_medium" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RatingBar
                                    style="@style/FoursquareReviewRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_toRightOf="@id/rating_value"
                                    android:numStars="5"
                                    android:rating="5"
                                    android:rotation="180"
                                    android:scaleX="0.7"
                                    android:scaleY="0.7"
                                    android:theme="@style/FoursquareReviewRating" />

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:max="5"
                                    android:progress="4"
                                    android:theme="@style/AppTheme.WhiteAccent" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RatingBar
                                    style="@style/FoursquareReviewRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/rating_value"
                                    android:numStars="5"
                                    android:rating="4"
                                    android:rotation="180"
                                    android:scaleX="0.7"
                                    android:scaleY="0.7"
                                    android:theme="@style/FoursquareReviewRating" />

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:max="5"
                                    android:progress="3"
                                    android:theme="@style/AppTheme.WhiteAccent" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RatingBar
                                    style="@style/FoursquareReviewRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/rating_value"
                                    android:numStars="5"
                                    android:rating="3"
                                    android:rotation="180"
                                    android:scaleX="0.7"
                                    android:scaleY="0.7"

                                    android:theme="@style/FoursquareReviewRating" />

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:max="5"
                                    android:progress="1"
                                    android:theme="@style/AppTheme.WhiteAccent" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RatingBar
                                    style="@style/FoursquareReviewRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/rating_value"
                                    android:numStars="5"
                                    android:rating="2"
                                    android:rotation="180"
                                    android:scaleX="0.7"
                                    android:scaleY="0.7"
                                    android:theme="@style/FoursquareReviewRating" />

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:max="5"
                                    android:progress="0"
                                    android:theme="@style/AppTheme.WhiteAccent" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RatingBar
                                    style="@style/FoursquareReviewRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/rating_value"
                                    android:numStars="5"
                                    android:rating="1"
                                    android:rotation="180"
                                    android:scaleX="0.7"
                                    android:scaleY="0.7"
                                    android:theme="@style/FoursquareReviewRating" />

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:max="5"
                                    android:progress="0"
                                    android:theme="@style/AppTheme.WhiteAccent" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/user_review_card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="15dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <net.promasoft.trawellmate.dsgn.CircleImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/userimg_1" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:gravity="left"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/person_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="John Doe"
                                    android:textColor="@color/text_color_black"
                                    android:textSize="@dimen/text_size_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0"
                                    android:gravity="left"
                                    android:text="Mar 8 2018"
                                    android:textColor="#FFAA00"
                                    android:textSize="@dimen/text_size_extra_small" />
                            </LinearLayout>

                            <RatingBar
                                android:id="@+id/user_rate1"
                                style="@style/FoursquareReviewRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="5"
                                android:theme="@style/FoursquareReviewRating" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="I am so happy, my dear friend, so absorbed in the exquisite sense o..."
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp"

                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="15dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <net.promasoft.trawellmate.dsgn.CircleImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/userimg_3" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:gravity="left"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="Sara Jackson"
                                    android:textColor="@color/text_color_black"
                                    android:textSize="@dimen/text_size_medium" />

                                <TextView
                                    android:id="@+id/date_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0"
                                    android:gravity="left"
                                    android:text="Mar 8 2018"
                                    android:textColor="#FFAA00"
                                    android:textSize="@dimen/text_size_extra_small" />
                            </LinearLayout>

                            <RatingBar
                                style="@style/FoursquareReviewRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="4"
                                android:theme="@style/FoursquareReviewRating" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="A wonderful serenity has taken possession of my entire soul..."
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="20dp"

                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="15dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">

                        <net.promasoft.trawellmate.dsgn.CircleImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/userimg_2" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:gravity="left"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="Jose Matthew"
                                    android:textColor="@color/text_color_black"
                                    android:textSize="@dimen/text_size_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0"
                                    android:gravity="left"
                                    android:text="Mar 8 2018"
                                    android:textColor="#FFAA00"
                                    android:textSize="@dimen/text_size_extra_small" />
                            </LinearLayout>

                            <RatingBar
                                style="@style/FoursquareReviewRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="4"
                                android:theme="@style/FoursquareReviewRating" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="A wonderful serenity has taken possession of my entire soul..."
                                android:textSize="@dimen/text_size_small" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</LinearLayout>