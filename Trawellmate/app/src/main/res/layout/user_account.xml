<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAct">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#030303" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_pattern" />

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:src="@drawable/ic_arrow_back"
        android:tint="@color/colorWhite" />

    <net.promasoft.trawellmate.dsgn.CircleImageView
        android:id="@+id/user_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/userimg_1" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="John Doe"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_extra_large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="India"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_medium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/accnt_dsgn_card" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/open_san_script"
                    android:text="Account"
                    android:textColor="@color/colorIconsText"
                    android:textSize="@dimen/text_size_large" />


                <LinearLayout
                    android:id="@+id/ID_acc_icon_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingBottom="35dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ID_acc_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:src="@drawable/ic_status"
                                android:tint="@color/colorIcons" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="status"
                                android:textColor="@color/colorIconsText"
                                android:textSize="@dimen/text_size_extra_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ID_acc_booking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:padding="2dp"
                                android:src="@drawable/ic_booking1"
                                android:tint="@color/colorIcons" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Booking"
                                android:textColor="@color/colorIconsText"

                                android:textSize="@dimen/text_size_extra_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ID_acc_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:padding="6dp"
                                android:src="@drawable/ic_user"
                                android:tint="@color/colorIcons" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="user"
                                android:textColor="@color/colorIconsText"
                                android:textSize="@dimen/text_size_extra_small" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ID_acc_transaction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:padding="4dp"
                                android:src="@drawable/ic_credit_card"
                                android:tint="@color/colorIcons" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Transaction"
                                android:textColor="@color/colorIconsText"

                                android:textSize="@dimen/text_size_extra_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ID_acc_pass_change"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:padding="6dp"
                                android:src="@drawable/ic_lock"
                                android:tint="@color/colorIcons" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Password change"
                                android:textColor="@color/colorIconsText"

                                android:textSize="@dimen/text_size_extra_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ID_acc_claim_refund"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:src="@drawable/ic_rupee_indian"
                                android:tint="@color/colorIcons" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Claim refund"
                                android:textColor="@color/colorIconsText"

                                android:textSize="@dimen/text_size_extra_small" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ID_acc_notification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:src="@drawable/ic_notification"
                                android:tint="@color/colorIcons" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Notifications"
                                android:textColor="@color/colorIconsText"

                                android:textSize="@dimen/text_size_extra_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ID_acc_prrivacy_policy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:padding="3dp"
                                android:src="@drawable/ic_privacy_policy"
                                android:tint="@color/colorIcons" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Privacy Policy"
                                android:textColor="@color/colorIconsText"

                                android:textSize="@dimen/text_size_extra_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ID_acc_contact_us"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:padding="4dp"
                                android:src="@drawable/ic_contact_us"
                                android:tint="@color/colorIcons" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Contact us"
                                android:textColor="@color/colorIconsText"

                                android:textSize="@dimen/text_size_extra_small" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ID_acc_faq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:padding="4dp"
                                android:src="@drawable/ic_faq"
                                android:tint="@color/colorIcons" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="FAQ"
                                android:textColor="@color/colorIconsText"

                                android:textSize="@dimen/text_size_extra_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ID_acc_about_us"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:src="@drawable/ic_about_us"
                                android:tint="@color/colorIcons" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="About us"
                                android:textColor="@color/colorIconsText"

                                android:textSize="@dimen/text_size_extra_small" />

                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>


</RelativeLayout>